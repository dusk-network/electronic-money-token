# EditorConfig  https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
insert_final_newline = true

# Rust files
[*.rs]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Use tabs for indentation (Makefiles require tabs)
[{Makefile,**.mk}]
indent_style = tab
